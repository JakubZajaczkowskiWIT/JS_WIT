document.getElementById("button1").addEventListener("click", function(){ console.log("Clicked"); })


//3)
var liczby = [1,2,3,4,5];

var dodawanie = liczby.map(function(x) {
    return x + 1;
});

function wieksze_niz(y) {
  return y >= 3;
}

var filtered = dodawanie.filter(wieksze_niz);
console.log(filtered)

